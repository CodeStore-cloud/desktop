<?xml version="1.0" encoding="UTF-8"?>

<?import cloud.codestore.client.ui.icon.Icon?>
<?import cloud.codestore.client.ui.separator.Separator?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="cloud.codestore.client.ui.selection.filter.Filter"
      stylesheets="@filter.css" styleClass="secondarySpacing">
    <Separator/>
    <HBox>
        <Icon styleClass="tag"/>
        <TextField fx:id="tagsInput" promptText="%filter.tags.placeholder" VBox.vgrow="NEVER"/>
    </HBox>
    <Separator/>
    <HBox>
        <Icon styleClass="language"/>
        <ComboBox fx:id="languageSelection" onAction="#triggerEvent" VBox.vgrow="NEVER"/>
    </HBox>
    <Separator/>
</VBox>
