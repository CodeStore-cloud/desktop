<?xml version="1.0" encoding="UTF-8"?>

<?import cloud.codestore.client.ui.IconButton?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<HBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="cloud.codestore.client.ui.snippet.footer.SnippetFooter"
      fx:id="footer" stylesheets="@footer.css" styleClass="primarySpacing">

    <IconButton fx:id="saveButton" styleClass="primary">
        <tooltip>
            <Tooltip text="%snippet.footer.save.tooltip"/>
        </tooltip>
    </IconButton>
    <IconButton fx:id="cancelButton" styleClass="primary">
        <tooltip>
            <Tooltip text="%snippet.footer.cancel.tooltip"/>
        </tooltip>
    </IconButton>

    <IconButton fx:id="editButton" styleClass="primary">
        <tooltip>
            <Tooltip text="%snippet.footer.edit.tooltip"/>
        </tooltip>
    </IconButton>
    <IconButton fx:id="deleteButton" styleClass="primary">
        <tooltip>
            <Tooltip text="%snippet.footer.delete.tooltip"/>
        </tooltip>
    </IconButton>
</HBox>
