<?xml version="1.0" encoding="UTF-8"?>

<?import cloud.codestore.client.ui.separator.Separator?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:controller="cloud.codestore.client.ui.snippet.SnippetController"
           stylesheets="@snippet.css">

    <VBox fx:id="snippetPane" styleClass="primarySpacing">
        <HBox>
            <fx:include source="./title/title.fxml" fx:id="snippetTitle" HBox.hgrow="ALWAYS"/>
            <fx:include source="../history/history.fxml" HBox.hgrow="NEVER" />
        </HBox>
        <Separator/>
        <fx:include source="./description/description.fxml" fx:id="snippetDescription"/>
        <Separator/>
        <fx:include source="./code/code.fxml" fx:id="snippetCode" VBox.vgrow="ALWAYS"/>
        <fx:include source="./details/details.fxml" fx:id="snippetDetails"/>
        <fx:include source="./footer/footer.fxml" fx:id="snippetFooter"/>
    </VBox>

    <VBox fx:id="noSnippetLabel">
        <Label text="%snippet.noSelection"/>
    </VBox>
</StackPane>
